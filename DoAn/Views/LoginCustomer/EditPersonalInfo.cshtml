@model DoAn.Models.Customer
@{
    ViewBag.Title = "Edit Personal Information";
}
<link href="~/Content/UpdatePerInfor.css" rel="stylesheet" />
<h2>Cập nhật thông tin cá nhân</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(model => model.NameCus, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Phone Number</label>
        @Html.TextBoxFor(model => model.PhoneCus, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(model => model.EmailCus, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Address</label>
        @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
}
