@model IEnumerable<DoAn.Models.Product>

<div class="fls-main">
    <div class="item-sale">
        @{
            // Order by SoldQuantity descending (treating null as 0) and take the top 10.
            var topProducts = Model.OrderByDescending(p => p.SoldQuantity ?? 0).Take(10);
        }
        @foreach (var pro in topProducts)
        {
            <div class="fls-item">
                <img src="@Url.Content(pro.ImagePro)" alt="@pro.NamePro" />
                <div class="fls-item-infor">@pro.NamePro</div>
                <div class="fls-item-price">
                    <div class="fls-price-special">
                        @((pro.Price ?? 0).ToString("C"))
                    </div>

                </div>
                <a href="@Url.Action("Details", "Product", new { id = pro.ProductID })" class="btn btn-default" style="text-decoration:none;">Chi Tiết</a>
            </div>
        }
    </div>
</div>
