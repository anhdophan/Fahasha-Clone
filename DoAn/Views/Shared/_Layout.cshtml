<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>

    <script src="~/Scripts/script.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    @{
        // Kiểm tra tình trạng đăng nhập của người dùng
        bool isLoggedIn = (Session["isAdminLoggedIn"] != null && (bool)Session["isAdminLoggedIn"]);

        // Đường dẫn tới trang thông tin cá nhân
        string userInfoUrl = "/LoginUser/Userlist";


        // Đường dẫn tới trang đăng nhập
        string loginUrl = "/LoginUser/Index";

        // Xác định đường dẫn chuyển hướng dựa trên tình trạng đăng nhập
        string redirectUrl = isLoggedIn ? userInfoUrl : loginUrl;
    }
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="width:auto; padding-bottom:50xpx;">
                    <li>@Html.ActionLink("Fahasha", "Index", "Product")</li>
                    <li>@Html.ActionLink("Đơn hàng", "History", "LoginUser")</li>
                    <li>@Html.ActionLink("Khách hàng", "Customer", "LoginUser")</li>
                    <li>@Html.ActionLink("Nhà Cung Cấp", "Index", "Supplier")</li>
                    <li>@Html.ActionLink("Nhà Phân Phối", "Index", "Publisher")</li>
                    <li>@Html.ActionLink("Hàng hóa", "QuanLySP", "Product")</li>
                    <li>@Html.ActionLink("Hàng Trong Kho", "Product", "LoginUser")</li>
                    <li>@Html.ActionLink("Loại hàng", "Index", "Categories")</li>
                    <li> <a href="@redirectUrl" name="result">Người Dùng</a></li>
                    <li>@Html.ActionLink("Đăng Xuất", "LogOutUser", "LoginUser")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid body-content" style="padding-top:50px;">
        <div class="row">
            <div class="col-md-2">
                <ul style="list-style-type:none">
                </ul>

            </div>
            <div class="col-md-10" id="div-content">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
