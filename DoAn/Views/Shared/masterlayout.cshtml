                            <div class="cart-icon"></div>
                            <div class="name-icon">
                                <div class="menu-label">Giỏ Hàng</div>
                            </div>
                        </a>
                    </div>
                    <div id="acc" class="icon-r">
                        @{
                            // Kiểm tra tình trạng đăng nhập của người dùng
                            bool isLoggedIn = (Session["isLoggedIn"] != null && (bool)Session["isLoggedIn"]);

                            // Đường dẫn tới trang thông tin cá nhân
                            string userInfoUrl = "/LoginCustomer/ThongTinCaNhan";


                            // Đường dẫn tới trang đăng nhập
                            string loginUrl = "/LoginCustomer/Index";

                            // Xác định đường dẫn chuyển hướng dựa trên tình trạng đăng nhập
                            string redirectUrl = isLoggedIn ? userInfoUrl : loginUrl;
                        }

                        <a href="@redirectUrl" name="result" style="text-decoration: none;">
                            <div class="acc-icon"></div>
                            <div class="name-icon">
                                <div class="menu-label">Tài Khoản</div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
