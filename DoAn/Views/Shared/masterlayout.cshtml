                                <img class="icon-search" src="https://cdn0.fahasa.com/skin/frontend/ma_vanese/fahasa/images/ico_search_white.svg" alt="">
                            </button>
                        </form>
                    </div>
                </div>

                <div class="icon-r-box">
                    <div id="cart" class="icon-r">
                        @Html.Action("BagCart", "ShoppingCart")
