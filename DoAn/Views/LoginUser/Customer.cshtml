@model IEnumerable<DoAn.Models.Customer>

@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer</h2>

@using (Html.BeginForm("Customer", "LoginUser", FormMethod.Get))
{


    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.IDCus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameCus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneCus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailCus)
            </th>
 
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IDCus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameCus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneCus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailCus)
                </td>
                <td>
                    @Html.ActionLink("OrderCus", "OrderCus", new { id = item.IDCus })
                </td>
            </tr>
        }

    </table>
}
