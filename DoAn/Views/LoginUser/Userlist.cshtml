@model IEnumerable<DoAn.Models.AdminUser>

@{
    ViewBag.Title = "Userlist";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Userlist</h2>

@using (Html.BeginForm("Userlist", "LoginUser", FormMethod.Get))
{
    

    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleUser)
            </th>    
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameUser)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleUser)
                </td>
                <td>
                    @Html.ActionLink("Set Role", "SetRole", "LoginUser", new { id = item.ID }, null)
                </td>
            </tr>
        }

    </table>
}